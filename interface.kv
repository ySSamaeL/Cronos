ScreenManager:
    HomeScreen:
    CronometroScreen:
    TemporizadorScreen:
    AlarmeScreen:
    PresetScreen:

<HomeScreen>:
    name: 'home'

    MDFloatLayout:
        md_bg_color: 0, 0, 0, 1  # Fundo preto

        MDLabel:
            text: 'Cronos App'
            halign: 'center'
            font_style: 'H4'
            theme_text_color: 'Primary'
            pos_hint: {'center_x': 0.5, 'center_y': 0.9}
        
        MDLabel:
            id: relogio
            text: '00:00:00'
            halign: 'center'
            font_style: 'H2'
            theme_text_color: 'Primary'
            pos_hint: {'center_x': 0.5, 'center_y': 0.75}

        MDRaisedButton:
            text: 'Cron√¥metro'
            pos_hint: {'center_x': 0.5, 'center_y': 0.6}
            size_hint_x: 0.6
            size_hint_y: 0.05
            on_release: app.root.current = 'cronometro'

        MDRaisedButton:
            text: 'Temporizador'
            pos_hint: {'center_x': 0.5, 'center_y': 0.5}
            size_hint_x: 0.6
            size_hint_y: 0.05
            on_release: 
                app.root.current = 'temporizador' 

        MDRaisedButton:
            text: 'Alarme'
            pos_hint: {'center_x': 0.5, 'center_y': 0.4}
            size_hint_x: 0.6
            size_hint_y: 0.05
            on_release: app.root.current = 'alarme'

        MDRaisedButton:
            text: 'Pre-sets'
            pos_hint: {'center_x': 0.5, 'center_y': 0.3}
            size_hint_x: 0.6
            size_hint_y: 0.05
            on_release: app.root.current = 'preset'

<CronometroScreen>:
    name: 'cronometro'
    MDFloatLayout:
        md_bg_color: 0, 0, 0, 1

        MDLabel:
            id: cronometro_tempo
            text: '00:00:00:000'
            halign: 'center'
            font_style: 'H2'
            theme_text_color: 'Primary'
            pos_hint: {'center_x': 0.5, 'center_y': 0.7}

        MDIconButton:
            icon: 'play'
            pos_hint: {'center_x': 0.3, 'center_y': 0.3}
            on_release: app.iniciar_cronometro()


        MDIconButton:
            icon: 'pause'
            pos_hint: {'center_x': 0.5, 'center_y': 0.3}
            on_release: app.pausar_cronometro()

        MDIconButton:
            icon: 'restart'
            pos_hint: {'center_x': 0.7, 'center_y': 0.3}
            on_release: app.resetar_cronometro()

        MDIconButton:
            icon: 'arrow-left'
            pos_hint: {'center_x': 0.5, 'center_y': 0.1}
            on_release: app.root.current = 'home'

<TemporizadorScreen>:
    name: 'temporizador'
    MDFloatLayout:
        md_bg_color: 0, 0, 0, 1

        MDIconButton:
            icon: 'chevron-up'
            pos_hint: {'center_x': 0.3, 'center_y': 0.8}
            on_release: app.temporizador.incrementar_horas()

        MDLabel:
            id: horas
            text: '00'
            halign: 'center'
            font_style: 'H4'
            theme_text_color: 'Primary'
            pos_hint: {'center_x': 0.3, 'center_y': 0.7}

        MDIconButton:
            icon: 'chevron-down'
            pos_hint: {'center_x': 0.3, 'center_y': 0.6}
            on_release: app.temporizador.decrementar_horas()

        MDLabel:
            text: ':'
            halign: 'center'
            font_style: 'H4'
            theme_text_color: 'Primary'
            pos_hint: {'center_x': 0.4, 'center_y': 0.7}

        MDIconButton:
            icon: 'chevron-up'
            pos_hint: {'center_x': 0.5, 'center_y': 0.8}
            on_release: app.temporizador.incrementar_minutos()

        MDLabel:
            id: minutos
            text: '00'
            halign: 'center'
            font_style: 'H4'
            theme_text_color: 'Primary'
            pos_hint: {'center_x': 0.5, 'center_y': 0.7}

        MDIconButton:
            icon: 'chevron-down'
            pos_hint: {'center_x': 0.5, 'center_y': 0.6}
            on_release: app.temporizador.decrementar_minutos()

        MDLabel:
            text: ':'
            halign: 'center'
            font_style: 'H4'
            theme_text_color: 'Primary'
            pos_hint: {'center_x': 0.6, 'center_y': 0.7}

        MDIconButton:
            icon: 'chevron-up'
            pos_hint: {'center_x': 0.7, 'center_y': 0.8}
            on_release: app.temporizador.incrementar_segundos()

        MDLabel:
            id: segundos
            text: '00'
            halign: 'center'
            font_style: 'H4'
            theme_text_color: 'Primary'
            pos_hint: {'center_x': 0.7, 'center_y': 0.7}

        MDIconButton:
            icon: 'chevron-down'
            pos_hint: {'center_x': 0.7, 'center_y': 0.6}
            on_release: app.temporizador.decrementar_segundos()

        MDIconButton:
            icon: 'play'
            pos_hint: {'center_x': 0.3, 'center_y': 0.3}
            on_release: app.iniciar_temporizador()

        MDIconButton:
            icon: 'pause'
            pos_hint: {'center_x': 0.5, 'center_y': 0.3}
            on_release: app.pausar_temporizador()

        MDIconButton:
            icon: 'restart'
            pos_hint: {'center_x': 0.7, 'center_y': 0.3}
            on_release: app.resetar_temporizador()

        MDIconButton:
            icon: 'arrow-left'
            pos_hint: {'center_x': 0.5, 'center_y': 0.1}
            on_release: app.root.current = 'home'
